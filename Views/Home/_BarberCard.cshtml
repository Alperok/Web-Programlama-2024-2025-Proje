@model Barber

<a href="@Url.Action("Details", "Barber", new { id = Model.Id })" class="text-decoration-none">
    <div class="card mb-3" style="max-width: 800px; border: 1px solid #ddd; border-radius: 10px; overflow: hidden;">
        <div class="row g-0">
            <div class="col-md-3">
                <img src="@Model.ThumbnailUrl" alt="Barber Thumbnail" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;">
            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text"><strong>Location:</strong> @Model.VerbalLocation</p>
                    <p class="card-text"><strong>Phone:</strong> @Model.PhoneNumber</p>
                    <p class="card-text">
                        <strong>Services:</strong> @string.Join(", ", Model.Services)
                    </p>
                    <p class="card-text">
                        <strong>Opening Hours:</strong> @Model.OpeningHour.ToShortTimeString() - @Model.ClosingHour.ToShortTimeString()
                    </p>
                    <div>
                        @foreach (var website in Model.Websites)
                        {
                            <a href="@website" target="_blank" class="btn btn-primary btn-sm me-1">Website</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>